{
  "compilerOptions": {
    "lib": ["dom", "es2016"],
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "declaration": true,
    "rootDir": ".",
    "outDir": "dist",
    "declarationDir": "dist",
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "types" : ["node", "jasmine"],
    "strictNullChecks": true
  },
  "include": [
    "index.ts",
    "lib/**/*"
  ],
  "exclude": [
    "schematics/**/*"
  ]
}
